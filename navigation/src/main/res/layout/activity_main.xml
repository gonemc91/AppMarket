<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">

        <FrameLayout
            android:id="@+id/cartIconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
         android:layout_marginEnd="15dp"
            android:visibility="gone"
            tools:visibility="visible"

            >

            <ImageView
                android:id="@+id/cartImageView"
                style="@style/ClickableIcon"
                android:src="@drawable/core_theme_ic_cart"
                app:tint="@color/black"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/cartCounterTextView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/cart_counnter_backgrund"
                android:gravity="center"
                android:layout_gravity="bottom|end"
                tools:text="8"
                tools:ignore="SpUsage"/>
        </FrameLayout>

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:textColor="@color/white"
            android:layout_marginEnd="6dp"
            android:lines="1"
            android:ellipsize="end"
            tools:text=" &#64;username"
            />

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost = "true"
        tools:layout = "@layout/fragment_tabs"
        />


</LinearLayout>